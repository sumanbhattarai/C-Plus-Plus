//checks whether positive or negative 

#include<iostream>
using namespace std ;

int main()
{
    int number ;
    cout<<"Enter a number: " << "\n" ;
    cin >> number ;
    if (number>=0)
    {

        cout<<"It is positive number: " << number << "\n" ;
    }
    else
    {
     cout<<"It is negative number : " << number << "\n" ;
    }
    cout<<"ThankYou" ;


}
