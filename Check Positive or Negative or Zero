#include<iostream>
using namespace std ;

int main()
{
    int number ;
    cout<<"Enter a number: " << "\n" ;
    cin >> number ;
    if (number>0)
    {

        cout<<"It is positive number: " << number << "\n" ;
    }
    else if (number<0)
    {
     cout<<"It is negative number : " << number << "\n" ;
    }
    else if (number==0)
    {
    cout<<"It is zero " << "\n" ;
    }
    cout<<"ThankYou" ;


}

